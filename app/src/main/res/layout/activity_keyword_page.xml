<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background2"
    android:layout_height="match_parent"
    tools:context=".KeywordPage"
    android:padding="20dp">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/backBtn"/>


    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/abeSwitch"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="16dp"
        android:paddingHorizontal="20dp"
        android:textColor="@color/black"
        android:background="@drawable/oval_btn"
        android:text="Keyword: Abraham 1 Buzz"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/jorSwitch"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:paddingHorizontal="20dp"
        android:layout_below="@+id/abeSwitch"
        android:textColor="@color/black"
        android:background="@drawable/oval_btn"
        android:text="Keyword: Jordan 2 Buzz"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/alarmSwitch"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:layout_below="@+id/jorSwitch"
        android:paddingHorizontal="20dp"
        android:textColor="@color/black"
        android:background="@drawable/oval_btn"
        android:text="Keyword: Fire Alarm 3 Buzz"
        tools:ignore="UseSwitchCompatOrMaterialXml" />




</RelativeLayout>